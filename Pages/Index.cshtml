@page
@using IncidentRecord;
@using CallsForService;
@using Newtonsoft.Json;

@model IndexModel
@{
    ViewData["Title"] = "Home page";
    List<Calls>? cls = ViewData["Services"] as List<Calls>;
    List<Incidents>? incident = ViewData["Incidents"] as List<Incidents>;
    // Using null conditional operators to handle reference types
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Neighborhood_Watch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Neighborhood_Watch.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="css/bootstrap.css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Poppins:400,600,700&display=swap" rel="stylesheet" />
    <link href="css/style.css" rel="stylesheet" />
    <link href="css/responsive.css" rel="stylesheet" />
</head>

<div class="text-center">
    <h1 class="display-4">Neighborhood Watch</h1>    
</div>




@if (Model.SearchResults != null && Model.SearchResults.Any())
{
    <div class="search-results">
        <h3>Search Results: @Model.SearchResults.Count records found</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Incident No</th>
                    <th>Date Reported</th>
                    <th>Offense</th>
                    <th>Location</th>
                    <th>CPD Neighborhood</th>
                    <th>Victim Age</th>
                    <th>Victim Gender</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in incident)
                {
                    <tr>
                        <td>@result.IncidentNo</td>
                        <td>@result.DateReported</td>
                        <td>@result.Offense</td>
                        <td>@result.Location</td>
                        <td>@result.CpdNeighborhood</td>
                        <td>@result.VictimAge</td>
                        <td>@result.VictimGender</td>
                    </tr>
                }
            </tbody>
        </table>
        <hr>
    </div>
}








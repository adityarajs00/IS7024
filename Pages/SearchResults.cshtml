@page
@model Neighborhood_Watch.Pages.SearchResultsModel

<div class="container">
    <h1>Search Results for "@Model.SearchTerm"</h1>

    @if (Model.SearchResults != null && Model.SearchResults.Count > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Attribute</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model.SearchResults)
                {
                    var parts = result.Split(":");
                    if (parts.Length == 2)
                    {
                        <tr>
                            <td>@parts[0]</td>
                            <td>@parts[1]</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No results found for "@Model.SearchTerm".</p>
    }
</div>
